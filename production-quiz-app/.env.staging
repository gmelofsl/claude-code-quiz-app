# Staging environment configuration

# Flask Environment
FLASK_ENV=staging
FLASK_DEBUG=False

# Secret Key (generate a secure random key)
# Python: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=generate-a-secure-key-for-staging

# Database URL (PostgreSQL for staging)
DATABASE_URL=postgresql://quiz_user:quiz_pass@localhost/quiz_app_staging

# Redis URL (required for staging)
REDIS_URL=redis://localhost:6379/0

# Server Configuration
HOST=0.0.0.0
PORT=5000

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=noreply@quiz-app-staging.local

# Sentry DSN (optional but recommended)
SENTRY_DSN=

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/quiz-app/staging.log
