# Development environment configuration

# Flask Environment
FLASK_ENV=development
FLASK_DEBUG=True

# Secret Key (development only - not secure)
SECRET_KEY=dev-secret-key-not-for-production

# Database URL (SQLite for development)
DATABASE_URL=sqlite:///dev_quiz_app.db

# Redis URL (optional in development, will use memory if not available)
REDIS_URL=redis://localhost:6379/0

# Server Configuration
HOST=127.0.0.1
PORT=5000

# Email Configuration (not required for development)
MAIL_SERVER=
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_DEFAULT_SENDER=noreply@quiz-app.local

# Sentry DSN (optional in development)
SENTRY_DSN=

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=
