# Production environment configuration
# IMPORTANT: Never commit this file to version control
# Use environment variables or secrets management in production

# Flask Environment
FLASK_ENV=production
FLASK_DEBUG=False

# Secret Key (REQUIRED - generate a secure random key)
# Python: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=REPLACE_WITH_SECURE_KEY

# Database URL (PostgreSQL REQUIRED)
DATABASE_URL=postgresql://username:password@host:5432/quiz_app_production

# Redis URL (REQUIRED for production)
REDIS_URL=redis://username:password@host:6379/0

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Email Configuration (REQUIRED for password reset/verification)
MAIL_SERVER=smtp.sendgrid.net
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=apikey
MAIL_PASSWORD=your-sendgrid-api-key
MAIL_DEFAULT_SENDER=noreply@yourdomain.com

# Sentry DSN (REQUIRED for production error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Logging
LOG_LEVEL=WARNING
LOG_FILE=/var/log/quiz-app/production.log
