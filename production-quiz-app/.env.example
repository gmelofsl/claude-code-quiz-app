# Environment configuration template
# Copy this file to .env.development, .env.staging, or .env.production
# and fill in the appropriate values

# Flask Environment (development, testing, staging, production)
FLASK_ENV=development
FLASK_DEBUG=True

# Secret Key (generate a secure random key for production)
# Python: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-change-in-production

# Database URL
# Development (SQLite): sqlite:///dev_quiz_app.db
# Production (PostgreSQL): postgresql://username:password@host:port/database
DATABASE_URL=sqlite:///dev_quiz_app.db

# Redis URL (for caching, sessions, rate limiting)
# Development: redis://localhost:6379/0
# Production: redis://username:password@host:port/db
REDIS_URL=redis://localhost:6379/0

# Server Configuration
HOST=127.0.0.1
PORT=5000

# Email Configuration (for password reset, email verification)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=noreply@quiz-app.local

# Sentry DSN (error tracking) - optional
# Get from https://sentry.io
SENTRY_DSN=

# Logging
LOG_LEVEL=INFO
LOG_FILE=
